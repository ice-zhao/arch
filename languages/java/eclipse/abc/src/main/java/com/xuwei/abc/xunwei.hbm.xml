<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.xuwei.abc.devices">
    <class name="Device" table="devices_tbl">
        <id name="deviceId" type="integer"></id>
        <property name="deviceName"  type="string"></property>
    </class>
    
    <class name="News" table="news_tbl">
    	<id name="id" type="integer">
    		<generator class="native"/>
    	</id>
    	<!-- 通过many-to-one 标签添加唯一属性约束，建立一对一关联关系 -->
  		<many-to-one name="device"/>
        <property name="title" type="string"></property>
    </class>
</hibernate-mapping>